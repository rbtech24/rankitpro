{
  "name": "workspace",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build client",
    "build:server": "esbuild server/index.ts --platform=node --outfile=dist/index.js --bundle --external:pg-native --external:bcrypt --format=esm",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.8.2",
    "esbuild": "^0.25.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "resend": "^4.6.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^6.3.5",
    "ws": "^8.18.3",
    "zod": "^3.25.67"
  }
}
